escape ^Tt

term xterm-256color
defscrollback 10000

altscreen on

vbell off

shell $SHELL
startup_message off

shelltitle '$ |bash'

msgwait 5

msgminwait 1

hardstatus on
hardstatus alwayslastline '%{= .b}%H%{-} %L=%-w%45L>%{=u b.}%n %t%{-}%+w %-17<%=%m/%d %02c:%s'
caption always '%?%F%{= bw}%:%{= wk}%?%2n%f%07=%t%='
sorendition '+r .b'

